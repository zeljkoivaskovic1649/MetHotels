<html t:type="layout" title="Dodavanje korisnika"
    xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
    xmlns:p="tapestry:parameter">
    <t:beaneditform object="korisnik" exclude="id" add="sobaId">
        <p:sobaId>
            <t:label for="sobaId"/>
            <t:select t:blankLabel="Odaberite sobu" t:id="sobaId" encoder="encoder"
            model="sobe" validate="required"/>
        </p:sobaId>
    </t:beaneditform>
    <t:grid source="korisnici" exclude="id" add="sobaId,delete" row="onekorisnik">
        <p:sobaIdCell>
            ${sobaId}
        </p:sobaIdCell>
        <p:deleteCell>
            <t:actionLink t:id="delete" context="onekorisnik.id">Delete</t:actionLink>
        </p:deleteCell>
    </t:grid>
</html>